<style>
  .logo {
    font-size: 1.5rem;
    font-weight: 700;
  }

  header {
    margin: auto;
    padding-block: 12px;
    border-bottom: 1px solid #e5e7eb;
  }

  /* First div inside header */
  header > div {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    max-width: var(--max-width);
    margin: auto;
  }

  ul {
    display: flex;
    gap: 20px;
  }

  a > svg {
    width: 1.25em;
    height: 1.25em;
  }

  a {
    display: flex;
    gap: 4px;
    align-items: center;
    font-weight: 700;
    text-decoration: none;
    color: var(--text-color);
  }

  a:hover {
    text-decoration: underline;
  }
</style>
