---
import { getCollection } from "astro:content";
import classnames from "classnames";
import Layout from "../../layouts/Layout.astro";

const tips = await getCollection("tips");
---

<Layout title="Connor Littleton | tips">
  <main class="mx-auto w-full max-w-2xl px-4 py-14">
    <div class="space-y-4">
      <div class="space-y-1">
        <h1 class="text-3xl font-bold">Tips</h1>
      </div>
      <ul class="space-y-6">
        {
          tips.map((post) => (
            <li>
              <article>
                <h2 class="text-xl font-bold">
                  <a
                    class="hover:underline decoration-slate-500 underline-offset-2"
                    href={`tips/${post.slug}`}
                  >
                    {post.data.title}
                  </a>
                </h2>
                <div>
                  <p class="slate-700 text-base font-normal">
                    {post.data.description}
                  </p>
                </div>
              </article>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
