---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout root={false} title="Connor Littleton | Blog Posts">
  <main class="mx-auto w-full max-w-2xl px-4 md:px-0 py-14 min-h-svh">
    <div class="space-y-4">
      <div class="space-y-1 mb-8">
        <h1 class="text-3xl font-bold">Blog</h1>
      </div>
      <ul class="space-y-2">
        {
          posts.map((post) => (
            <li>
              <article>
                <a
                  href={`/blog/${post.data.title.toLowerCase().split(" ").join("-")}`}
                  class="-mx-3 flex flex-col rounded-md px-3 no-underline hover:bg-[#e7e6e6] dark:hover:bg-gray-200 sm:py-3"
                >
                  <h2>{post.data.title}</h2>
                  <span class="text-[#63637D]">{post.data.description}</span>
                </a>
              </article>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
